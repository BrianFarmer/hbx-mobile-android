<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/employee_details_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gov.dc.broker.EmployeeDetailsActivity"
    >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="test title"
        android:background="@color/titlebar">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/textViewEmployeeName"
        style="@style/Title2"
        />

    <LinearLayout
        android:id="@+id/action_buttons_row"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmployeeName"
        android:visibility="gone"
        android:layout_centerHorizontal="true" >
        <ImageButton
            android:id="@+id/imageButtonPhone"
            android:src="@drawable/phoneicon"
            style="@style/IconButton" />

        <ImageButton
            android:id="@+id/imageButtonChat"
            android:src="@drawable/emailicon"
            style="@style/IconButton" />

        <ImageButton
            android:id="@+id/imageButtonEmail"
            android:src="@drawable/messageicon"
            style="@style/IconButton" />
    </LinearLayout>
    <TextView
        android:id="@+id/textViewCoverageYear"
        android:text="@string/coverage_year_label"
        android:layout_below="@+id/action_buttons_row"
        style="@style/Subtitle2"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_buttons_row"
        android:layout_centerHorizontal="true"
        android:id="@+id/spinnerCoverageYear"
        style="@style/Subtitle2"
        />
    <TextView
        android:id="@+id/textViewCoverageYearLabel"
        android:text="@string/coverage_year_label"
        android:layout_below="@+id/spinnerCoverageYear"
        style="@style/Subtitle2"
        />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCoverageYearLabel"
        android:layout_alignParentLeft="true"
        android:id="@+id/textViewEnrollmentStatus"
        style="@style/Subtitle2"
        />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewEnrollmentStatus"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayoutEmpoyeeDetails">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_drawer"
                android:id="@+id/textViewDetailsDrawer"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageViewDetailsDrawer"
                android:layout_toStartOf="@+id/imageViewDetailsDrawer"
                android:layout_marginBottom="2sp"
                style="@style/expandable_text_employee"
                />
            <ImageView
                android:id="@+id/imageViewDetailsDrawer"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/textViewDetailsDrawer"
                android:layout_alignBottom="@id/textViewDetailsDrawer"
                android:src="@drawable/blue_circle_plus"
                style="@style/expandable_image_employee"
                />
            <TextView
                android:text="@string/dob_field_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDetailsDrawer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textViewDobField"
                android:tag="@string/details_group"
                style="@style/employee_field"
                />
            <TextView
                android:text="@string/ssn_field_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDobField"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textViewSsnField"
                android:tag="@string/details_group"
                style="@style/employee_field"
                />
            <TextView
                android:text="@string/hired_on_field_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSsnField"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textViewHiredOn"
                android:tag="@string/details_group"
                style="@style/employee_field"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/health_plan_drawer_label"
                android:id="@+id/textViewHealthPlanDrawer"
                android:layout_below="@+id/textViewHiredOn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageViewHealthPlanDrawer"
                android:layout_toStartOf="@+id/imageViewHealthPlanDrawer"
                android:layout_marginBottom="2sp"
                style="@style/expandable_text_employee"
                />
            <ImageView
                android:id="@+id/imageViewHealthPlanDrawer"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/textViewHealthPlanDrawer"
                android:layout_alignBottom="@id/textViewHealthPlanDrawer"
                android:src="@drawable/blue_circle_plus"
                style="@style/expandable_image_employee"
                />
            <TextView
                android:text="Not enrolled in any plan for this year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewHealthPlanDrawer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25sp"
                android:layout_marginStart="25sp"
                android:id="@+id/textViewNotEnrolled"
                android:tag="@string/health_plan_group_tag"
                style="@style/employee_field"
                />
            <TextView
                android:text="@string/benefit_group_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHealthPlanDrawer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textViewBenefitGroupField"
                android:tag="@string/health_plan_group_tag"
                style="@style/employee_field"
                />
            <TextView
                android:text="@string/plan_name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewBenefitGroupField"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textViewPlanNameField"
                android:tag="@string/health_plan_group_tag"
                style="@style/employee_field"
                />
            <TextView
                android:text="@string/plan_start_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPlanNameField"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textViewPlanStartField"
                android:tag="@string/health_plan_group_tag"
                style="@style/employee_field"
                />
            <TextView
                android:text="@string/metal_level_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPlanStartField"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textViewMetalLevelField"
                android:tag="@string/health_plan_group_tag"
                style="@style/employee_field"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewMetalLevelField"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tag="@string/health_plan_group_tag"
                android:id="@+id/linearLayoutContributions"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:tag="@string/health_plan_group_tag"
                    android:id="@+id/linearLayoutPremiums"
                    >
                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewPremiums"
                        style="@style/employee_costs_employee"
                        />
                    <TextView
                        android:text="@string/premiums_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:id="@+id/textViewPremiumsLabel"
                        style="@style/employee_costs_label_employee"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:tag="@string/health_plan_group_tag"
                    android:id="@+id/linearLayoutEmployerContribution"
                    >
                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewEmployerContribution"
                        style="@style/employer_costs_employee"
                        />
                    <TextView
                        android:text="@string/employer_contribution_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:id="@+id/textViewEmployerContributionLabel"
                        style="@style/employer_costs_label_employee"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:tag="@string/health_plan_group_tag"
                    android:id="@+id/linearLayoutEmployeePays"
                    >
                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewEmployeeCost"
                        style="@style/total_costs_employee"
                        />
                    <TextView
                        android:text="@string/employee_contribution_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:id="@+id/textViewEmployeePaysLabel"
                        style="@style/total_costs_label_employee"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dependents_drawer"
                android:id="@+id/textViewDependentsDrawer"
                android:layout_below="@+id/linearLayoutContributions"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageViewDependentsDrawer"
                android:layout_toStartOf="@+id/imageViewDependentsDrawer"
                android:layout_marginBottom="2sp"
                style="@style/expandable_text_employee"
                />
            <ImageView
                android:id="@+id/imageViewDependentsDrawer"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/textViewDependentsDrawer"
                android:layout_alignBottom="@id/textViewDependentsDrawer"
                android:src="@drawable/blue_circle_plus"
                style="@style/expandable_image_employee"
                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
