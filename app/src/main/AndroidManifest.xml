<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="org.dchbx.coveragehq"

    >

    <uses-feature android:name="android.hardware.camera"
                  android:required="false" />
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23"
        />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"
        />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="org.dchbx.coveragehq.BrokerApplication"
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="org.dchbx.coveragehq.RootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="org.dchbx.coveragehq.MainActivity"
            android:label="">
            <meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="org.dchbx.coveragehq.LoginActivity"
            android:label="@string/title_activity_login"
            />
        <activity android:name="org.dchbx.coveragehq.CarriersActivity"/>
        <activity
            android:name="org.dchbx.coveragehq.EmployerDetailsActivity"
            android:label=""
            />
        <activity
            android:name="org.dchbx.coveragehq.EmployeeDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            />
        <activity
            android:name="org.dchbx.coveragehq.InsuredDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            />
        <activity
            android:name="org.dchbx.coveragehq.SummaryOfBenefitsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            />
        <activity
            android:name="org.dchbx.coveragehq.FamilyActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label=""
            />
    </application>

</manifest>