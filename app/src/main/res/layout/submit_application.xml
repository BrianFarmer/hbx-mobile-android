<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title=""
            android:background="@color/titlebar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/submitYourApplication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/submit_your_application"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textColor="@color/textdarkgray"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/firstText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/must_report"
            style="@style/html_textview"
            app:layout_constraintTop_toBottomOf="@+id/submitYourApplication"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <CheckBox
            android:id="@+id/firstCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I Agree"
            android:textSize="20dp"
            android:textColor="@color/textdarkgray"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/firstText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/secondText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/i_understand"
            style="@style/html_textview"
            app:layout_constraintTop_toBottomOf="@+id/firstCheck"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <CheckBox
            android:id="@+id/secondCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I Agree"
            android:textSize="20dp"
            android:textColor="@color/textdarkgray"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/secondText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:id="@+id/signElectronically"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sign_electronically"
            android:textSize="20dp"
            android:textColor="@color/textgray"
            app:layout_constraintTop_toBottomOf="@+id/secondCheck"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/firstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/ivl_edittext"
            android:hint="@string/first_name"
            android:background="@drawable/fe_round_corner"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/signElectronically"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <View
            android:id="@+id/firstSeparator"
            style="@style/NormalSeparator"
            android:layout_below="@id/editTextPassword"
            android:background="#ffffff"
            app:layout_constraintTop_toBottomOf="@+id/firstName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/lastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/ivl_edittext"
            android:hint="@string/last_name"
            android:background="@drawable/fe_round_corner"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/firstName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <View
            android:id="@+id/secondSeparator"
            style="@style/NormalSeparator"
            android:layout_below="@id/editTextPassword"
            android:background="#ffffff"
            app:layout_constraintTop_toBottomOf="@+id/lastName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <Button
            android:id="@+id/submitMyApplication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/submit_my_application"
            android:background="@drawable/ivl_button_blue_solid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondSeparator"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>