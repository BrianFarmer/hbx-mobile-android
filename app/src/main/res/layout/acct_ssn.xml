<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="org.dchbx.coveragehq.ridp.AcctSsn"/>
        <variable
            name="account"
            type="org.dchbx.coveragehq.models.account.Account"/>
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/white"
                                                 >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title=""
            android:background="@color/titlebar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/ssnIsAlready"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/what_is_your"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textStyle="bold"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

        <TextView
            android:id="@+id/associatedWithAn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/social_security"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textStyle="bold"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/ssnIsAlready"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />
        <TextView
            android:id="@+id/HBXaccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/number"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textStyle="bold"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/associatedWithAn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/ssn"
            android:inputType="text"
            android:text="@={account.ssn}"
            app:mask="###-##-####"
            android:textSize="24dp"
            android:textColor="@color/keep_green"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/HBXaccount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            >
            <requestFocus />
        </com.vicmikhailau.maskededittext.MaskedEditText>
        <View
            android:id="@+id/ssn_underline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ssn"
            android:background="@color/mainblue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />
        <ImageButton
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="35dp"
            app:srcCompat="@drawable/right_arrow_vector"
            android:onClick="@{()->activity.onClick(account)}"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
