<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/relationshipLabel"
        style="@style/ivl_member_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        app:layout_constraintRight_toLeftOf="@+id/editRelationship"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Family Member"
        />

    <ImageView
        android:id="@+id/editRelationship"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/right_arrow_blue"
        />
</android.support.constraint.ConstraintLayout>