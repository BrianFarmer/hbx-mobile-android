<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00a99e"
    android:tag="@+id/view_type"
    android:minHeight="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/open_enrollment_in_progress"
        android:id="@+id/textViewSectionName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        style="@style/EmployerListSectionHeaderText" />
    <ImageView
        android:id="@+id/imageViewCircle"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginRight="29dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textViewSectionName"
        android:layout_alignBottom="@+id/textViewSectionName"
        android:src="@drawable/circle"
        android:background="@android:color/transparent"/>
    <Button
        android:id="@+id/buttonCount"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginRight="29dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textViewSectionName"
        android:layout_alignBottom="@+id/textViewSectionName"
        android:textColor="#ffffff"
        android:textSize="11dp"
        android:text="1"
        android:background="@android:color/transparent"/>
</RelativeLayout>