<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title="test title"
            android:background="@color/mainblue"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            >
        </android.support.v7.widget.Toolbar>


        <TextView
            android:id="@+id/youSelectd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/you_ve_selected_this_plan"
            android:textSize="32dp"
            android:textColor="@color/textdarkgray"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <include
            android:id="@+id/planDetailsHeader"
            layout="@layout/plan_details_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/youSelectd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:id="@+id/effectiveDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/planDetailsHeader"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/coverage_begins_colon_label"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textColor="@color/textdarkgray"
            android:textStyle="normal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:id="@+id/effectiveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/effectiveDateLabel"
            app:layout_constraintTop_toTopOf="@+id/effectiveDateLabel"
            android:text="TextView"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textColor="@color/textdarkgray"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/termAndCondidtionsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_conditions"
            android:textSize="20dp"
            android:textColor="@color/textdarkgray"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/effectiveDateLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/termAndCondidtions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_conditions_content"
            android:textSize="20dp"
            android:textColor="@color/textdarkgray"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/termAndCondidtionsLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <Button
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:background="@drawable/ivl_button_blue_solid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termAndCondidtions"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>