<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/white"
                                             >
    <TextView
        android:id="@+id/ssnIsAlready"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/what_is_your"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        />
    <TextView
        android:id="@+id/dateOfBirthTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/date_of_birth"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/ssnIsAlready"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        />

    <EditText
        android:id="@+id/dateOfBirth"
        android:inputType="date"
        android:textSize="24dp"
        android:background="@color/transparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dateOfBirthTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:paddingTop="10dp"
        android:paddingBottom="9dp"
        >
        <requestFocus />
    </EditText>
    <View
        android:id="@+id/addressUnderline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        style="@style/NormalSeparator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateOfBirth"
        android:background="@color/mainblue"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        />
    <ImageButton
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="35dp"
        app:srcCompat="@drawable/right_arrow_vector"
        />

</android.support.constraint.ConstraintLayout>