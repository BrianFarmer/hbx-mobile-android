<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="activity"
            type="org.dchbx.coveragehq.ridp.AcctCreate"/>
        <variable
            name="account"
            type="org.dchbx.coveragehq.models.account.Account"/>
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/white"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title=""
            android:background="@color/titlebar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                         xmlns:app="http://schemas.android.com/apk/res-auto"
                                                         android:id="@+id/innerConstraintLayout"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:background="@color/white"
                >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/set_up_your_mobile_password"
                    android:textAlignment="center"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:background="@color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="28dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    />

                <EditText
                    android:id="@+id/firstName"
                    android:inputType="textPersonName"
                    android:text="@={account.firstName}"
                    android:textColor="@color/keep_green"
                    android:hint="@string/first_name"
                    android:textSize="22dp"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="5dp"
                    />
                <View
                    android:id="@+id/firstNameUnderline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    style="@style/NormalSeparator"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/firstName"
                    android:background="@color/mainblue"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    />
                <EditText
                    android:id="@+id/lastName"
                    android:inputType="textPersonName"
                    android:text="@={account.lastName}"
                    android:textColor="@color/keep_green"
                    android:hint="@string/last_name"
                    android:textSize="22dp"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/firstNameUnderline"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="22dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    />
                <View
                    android:id="@+id/lastNameUnderline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    style="@style/NormalSeparator"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lastName"
                    android:background="@color/mainblue"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    />

                <EditText
                    android:id="@+id/emailAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="22dp"
                    android:textColor="@color/keep_green"
                    android:background="@color/transparent"
                    android:text="@={account.emailAddress}"
                    android:hint="@string/email_address"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lastNameUnderline"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="22dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    />
                <View
                    android:id="@+id/emailAddressUnderline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    style="@style/NormalSeparator"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emailAddress"
                    android:background="@color/mainblue"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@={account.password}"
                    android:textColor="@color/keep_green"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textSize="22dp"
                    android:background="@color/transparent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emailAddressUnderline"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="22dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    />
                <View
                    android:id="@+id/passwordUnderline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    style="@style/NormalSeparator"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/password"
                    android:background="@color/mainblue"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    />

                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@={account.password}"
                    android:textColor="@color/keep_green"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:textSize="22dp"
                    android:background="@color/transparent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/passwordUnderline"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="22dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="5dp"
                    />
                <View
                    android:id="@+id/confirmPasswordUnderline"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    style="@style/NormalSeparator"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/confirmPassword"
                    android:background="@color/mainblue"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    />

                <Button
                    android:id="@+id/continueButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/continue_string"
                    android:background="@drawable/ivl_button_green_solid"
                    android:textAllCaps="true"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/confirmPasswordUnderline"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="25dp"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:onClick="@{()->activity.onClick(account)}"
                    />
                <Button
                    android:id="@+id/skipButton"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/skip_this"
                    android:background="@drawable/ivl_button_blue_solid"
                    android:textAllCaps="true"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/continueButton"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:onClick="@{()->activity.onSkip()}"
                    />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</layout>
