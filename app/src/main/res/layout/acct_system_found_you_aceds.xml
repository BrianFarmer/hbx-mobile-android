<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="org.dchbx.coveragehq.ridp.AcctSystemFoundYouAceds"/>
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/white"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title=""
            android:background="@color/titlebar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/alreadHaveApplication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/already_have_application"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@color/transparent"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            />

        <TextView
            android:id="@+id/toMakeChanges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/to_make_changes"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="@color/transparent"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alreadHaveApplication"
            />

        <Button
            android:id="@+id/needIndividual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/continue_string"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toMakeChanges"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/ivl_button_blue_solid"
            android:onClick="@{()->activity.continueClicked()}"
            />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="COME BACK LATER"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/needIndividual"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/ivl_button_red_solid"
            android:onClick="@{()->activity.comeBackLaterClicked()}"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
