<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="#057bc4"
                android:endColor="#057bc4"
                android:angle="270"/>
            <corners
                android:radius="20dp"/>
            <size
                android:width="40dp"
                android:height="40dp" />
            <stroke
                android:width="6dp"
                android:color="#00000000"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
        <gradient
            android:startColor="#ffffff"
            android:endColor="#ffffff"
            android:angle="270"/>
        <corners
            android:radius="20dp"/>
        <size
            android:width="40dp"
            android:height="40dp" />
        <stroke
            android:width="6dp"
            android:color="#00000000"/>
        </shape>
    </item>
</selector>