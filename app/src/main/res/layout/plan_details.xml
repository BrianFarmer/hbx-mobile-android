<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/mainbackgroundcolor"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title=""
            android:background="@color/titlebar">
        </android.support.v7.widget.Toolbar>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/toolbar"
                    android:layout_above="@+id/enroll"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
            >
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="wrap_content">




                <ImageView
                    android:id="@+id/carrierLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:id="@+id/planName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/carrierLogo"
                    android:layout_alignStart="@+id/carrierLogo"
                    android:layout_below="@+id/carrierLogo"
                    android:layout_marginTop="15dp"
                    android:text="TextView"
                    android:textSize="18sp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    >
                    <TextView
                        android:id="@+id/planTypeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="roboto"
                        android:text="@string/plan_type"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/planType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/planTypeLabel"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="TextView"
                        android:textSize="18sp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    >
                    <TextView
                        android:id="@+id/planLocationLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/plan_location"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/planLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/planLocationLabel"
                        android:layout_alignParentRight="true"
                        android:text="TextView"
                        android:textSize="18sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    >
                    <TextView
                        android:id="@+id/medalLevelLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/medal_level"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/planMetalRing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/medalLevelLabel"
                        android:layout_alignBottom="@+id/medalLevelLabel"
                        android:layout_toRightOf="@+id/medalLevelLabel"
                        />
                    <TextView
                        android:id="@+id/metalType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/planMetalRing"
                        android:layout_alignParentRight="true"
                        android:text="TextView"
                        android:textSize="18sp"
                        />
                </RelativeLayout>


                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    >
                    <TextView
                        android:id="@+id/monthlyLabel"
                        app:layout_widthPercent="33%"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal"
                        android:textSize="18dp"
                        android:text="@string/monthly"
                        />
                    <TextView
                        android:id="@+id/monthlyPremiumLabel"
                        app:layout_widthPercent="33%"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/monthlyLabel"
                        android:gravity="center_horizontal"
                        android:textSize="18dp"
                        android:text="@string/premium"
                        />
                    <TextView
                        android:id="@+id/monthlyPremium"
                        app:layout_widthPercent="33%"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/monthlyPremiumLabel"
                        android:gravity="center_horizontal"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/annualLabel"
                        app:layout_widthPercent="33%"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/monthlyLabel"
                        android:gravity="center_horizontal"
                        android:textSize="18dp"
                        android:text="@string/annual"
                        />
                    <TextView
                        android:id="@+id/premiumLabel"
                        app:layout_widthPercent="33%"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/annualLabel"
                        android:layout_toRightOf="@id/monthlyLabel"
                        android:gravity="center_horizontal"
                        android:textSize="18dp"
                        android:text="@string/premium"
                        />
                    <TextView
                        android:id="@+id/annualPremium"
                        app:layout_widthPercent="33%"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/premiumLabel"
                        android:layout_toRightOf="@id/monthlyPremium"
                        android:gravity="center_horizontal"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/deductibleLabel"
                        app:layout_widthPercent="33%"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/premiumLabel"
                        android:layout_toRightOf="@id/annualLabel"
                        android:gravity="center_horizontal"
                        android:textSize="18dp"
                        android:text="@string/deductible"
                        />
                    <TextView
                        android:id="@+id/deductible"
                        app:layout_widthPercent="33%"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/deductibleLabel"
                        android:layout_toRightOf="@id/annualPremium"
                        android:textSize="22dp"
                        android:text="$7,175"
                        android:textStyle="bold"
                        />
                </android.support.percent.PercentRelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resources_links_header_text"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#007bc4"
                    android:gravity="center_horizontal"
                    tools:text="Terms and Conditions"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#007bc4"
                    tools:text="Phyisician Directory"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    tools:text="Summary of benefits &amp; Coverage"
                    />
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/enroll"
            android:text="@string/enroll_in_this_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="65dp"
            android:paddingBottom="21dp"
            android:paddingTop="21dp"
            android:paddingRight="65dp"
            android:gravity="center"
            />
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/hamburger" />
</android.support.v4.widget.DrawerLayout>