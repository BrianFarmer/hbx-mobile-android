<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="org.dchbx.coveragehq.ridp.AcctSystemFoundYou"/>
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/white"
        >

        <TextView
            android:id="@+id/label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This SSN is already associated with an HBX account."
            android:textAlignment="center"
            android:textSize="32dp"
            android:textStyle="bold"
            android:background="@color/transparent"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/needIndividual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PLEASE LOG IN"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/ivl_button_blue_solid"
            android:onClick="@{()->activity.pleaseLogInClicked()}"
            />

        <Button
            android:id="@+id/reviewYourAnswers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="REVIEW YOUR ANSWERS"
            android:textColor="@color/mainblue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/needIndividual"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/ivl_button_blue_border"
            android:onClick="@{()->activity.reviewYourAnswersClicked()}"
            />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="COME BACK LATER"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviewYourAnswers"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/ivl_button_red_solid"
            android:onClick="@{()->activity.comeBackLaterClicked()}"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
