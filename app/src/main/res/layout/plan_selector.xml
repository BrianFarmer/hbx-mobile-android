<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/mainbackgroundcolor"
    >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
        >

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title="test title"
            android:background="@color/mainblue"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/plansAndFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plans_and_favorites_counts"
            android:textSize="20dp"
            android:textColor="@color/textgray"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/swipeDeckFrameLayout"


            app:layout_constraintBottom_toTopOf="@+id/reset"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/plansAndFavorites"
            android:layout_marginBottom="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

        <TextView
            android:id="@+id/discard"
            android:text="@string/discard"
            android:textSize="14dp"
            android:gravity="center_horizontal"
            android:textColor="@color/button_red"
            android:drawableTop="@drawable/discard"
            android:drawablePadding="8dp"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="17dp"
            />

        <TextView
            android:id="@+id/reset"
            android:text="@string/reset"
            android:textSize="14dp"
            android:textColor="@color/waived_color"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/reset"
            android:drawablePadding="8dp"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/keep"
            android:text="@string/keep"
            android:textSize="14dp"
            android:textColor="@color/monthly_green"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/keep"
            android:drawablePadding="8dp"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="17dp"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
    android:id="@+id/navigation"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/navigation_header"
    app:menu="@menu/hamburger" />
</android.support.v4.widget.DrawerLayout>

