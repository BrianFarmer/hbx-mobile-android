<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:id="@+id/imageViewFingerprint"
        android:src="@drawable/fingerprint_logo"
        />

    <TextView
        android:text="@string/fingerprint_messagge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewFingerprint"
        android:layout_toRightOf="@+id/imageViewFingerprint"
        android:layout_marginLeft="15dp"
        android:id="@+id/textViewMessage"
        />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewFingerprint"
        android:layout_alignLeft="@+id/imageViewFingerprint"
        android:layout_marginTop="15sp"
        android:id="@+id/textViewFingerprintStatus"
        />

    <Button
        android:text="@android:string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFingerprintStatus"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:id="@+id/buttonCancel"
        />
</RelativeLayout>