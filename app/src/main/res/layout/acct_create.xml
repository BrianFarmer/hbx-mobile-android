<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="activity"
            type="org.dchbx.coveragehq.ridp.AcctCreate"/>
        <variable
            name="account"
            type="org.dchbx.coveragehq.models.account.Account"/>
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/white"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title=""
            android:background="@color/titlebar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lets_create"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textStyle="bold"
            android:maxLines="2"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

        <EditText
            android:id="@+id/firstName"
            android:inputType="text"
            android:text="@={account.firstName}"
            android:textColor="@color/keep_green"
            android:hint="@string/first_name"
            android:textSize="22dp"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            />
        <View
            android:id="@+id/addressUnderline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstName"
            android:background="@color/mainblue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />
        <EditText
            android:id="@+id/address2"
            android:inputType="textPersonName"
            android:text="@={account.lastName}"
            android:textColor="@color/keep_green"
            android:hint="@string/last_name"
            android:textSize="22dp"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addressUnderline"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="22dp"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            />
        <View
            android:id="@+id/address2Underline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address2"
            android:background="@color/mainblue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

        <EditText
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textSize="22dp"
            android:textColor="@color/keep_green"
            android:background="@color/transparent"
            android:text="@={account.emailAddress}"
            android:hint="@string/email_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address2Underline"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="22dp"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            />
        <View
            android:id="@+id/cityUnderline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/city"
            android:background="@color/mainblue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@={account.password}"
            android:textColor="@color/keep_green"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="22dp"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityUnderline"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="22dp"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            />
        <View
            android:id="@+id/passwordUnderline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:background="@color/mainblue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/continue_string"
            android:background="@drawable/ivl_button_green_solid"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/skipButton"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:onClick="@{()->activity.onClick(account)}"
            />
        <Button
            android:id="@+id/skipButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:background="@drawable/ivl_button_blue_solid"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:onClick="@{()->activity.onSkip()}"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
