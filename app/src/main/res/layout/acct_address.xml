<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="org.dchbx.coveragehq.ridp.AcctAddress"/>
        <variable
            name="account"
            type="org.dchbx.coveragehq.models.account.Account"/>
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/white"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title=""
            android:background="@color/titlebar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_is_your_nhome_address"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textStyle="bold"
            android:maxLines="2"
            android:background="@color/transparent"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            />

        <EditText
            android:id="@+id/firstName"
            android:inputType="text"
            android:text="@={account.address.address1}"
            android:hint="Address"
            android:textSize="24dp"
            android:textColor="@color/keep_green"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            />
        <View
            android:id="@+id/addressUnderline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstName"
            android:background="@color/mainblue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />
        <EditText
            android:id="@+id/address2"
            android:inputType="textPersonName"
            android:text="@={account.address.address2}"
            android:hint="Address 2"
            android:textSize="24dp"
            android:textColor="@color/keep_green"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addressUnderline"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            />
        <View
            android:id="@+id/address2Underline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address2"
            android:background="@color/mainblue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

        <EditText
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textSize="24dp"
            android:textColor="@color/keep_green"
            android:background="@color/transparent"
            android:text="@={account.address.city}"
            android:hint="City"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address2Underline"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            />
        <View
            android:id="@+id/cityUnderline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/city"
            android:background="@color/mainblue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

        <EditText
            android:id="@+id/state"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@={account.address.state}"
            android:hint="State"
            android:textSize="24dp"
            android:textColor="@color/keep_green"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityUnderline"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            />
        <View
            android:id="@+id/stateUnderline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="@+id/state"
            app:layout_constraintRight_toRightOf="@+id/state"
            app:layout_constraintTop_toBottomOf="@+id/state"
            android:background="@color/mainblue"
            />

        <EditText
            android:id="@+id/zipCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@={account.address.zipCode}"
            android:hint="ZIP Code"
            android:textSize="24dp"
            android:textColor="@color/keep_green"
            android:background="@color/transparent"
            app:layout_constraintLeft_toRightOf="@+id/state"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityUnderline"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="9dp"
            />
        <View
            android:id="@+id/zipCodeUnderline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/NormalSeparator"
            app:layout_constraintLeft_toLeftOf="@+id/zipCode"
            app:layout_constraintRight_toRightOf="@+id/zipCode"
            app:layout_constraintTop_toBottomOf="@+id/zipCode"
            android:background="@color/mainblue"
            />

        <ImageButton
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="35dp"
            app:srcCompat="@drawable/right_arrow_vector"
            android:onClick="@{()->activity.onClick(account)}"
            />

    </android.support.constraint.ConstraintLayout>
</layout>