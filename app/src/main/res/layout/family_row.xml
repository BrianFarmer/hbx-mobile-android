<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/removeMember"
        app:layout_widthPercent="20%"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/memberLabel"
        android:layout_alignBottom="@+id/memberLabel"
        android:scaleType="center"
        android:src="@drawable/red_x"
        android:background="@color/transparent"
        />

    <TextView
        android:id="@+id/memberLabel"
        style="@style/ivl_member_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/removeMember"
        android:layout_alignBaseline="@+id/age"
        android:text="Family Member"
        />

    <EditText
        android:id="@+id/age"
        style="@style/ivl_number"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:hint="@string/age"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_marginRightPercent="20%"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
    />

</android.support.percent.PercentRelativeLayout>