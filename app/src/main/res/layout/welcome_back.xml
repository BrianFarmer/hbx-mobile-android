<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="activity"
            type="org.dchbx.coveragehq.WelcomeBackActivity"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue_button_down"
    >
        <ImageView
            android:id="@+id/imageViewDcHealthLinkLogo"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:layout_height="36.7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/app_header_vector"
            android:adjustViewBounds="true"
            />

        <EditText
            android:id="@+id/editTextAcountName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:layout_below="@id/imageViewDcHealthLinkLogo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:minLines="1"
            android:maxLines="1"
            android:background="@android:color/transparent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:singleLine="true"
            >
            <requestFocus/>
        </EditText>

        <View
            android:id="@+id/viewAccountSeparator"
            style="@style/NormalSeparator"
            android:layout_below="@id/editTextAcountName"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white"
            />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewAccountSeparator"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:background="@android:color/transparent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableTint="#ffffff"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:singleLine="true"
            tools:imeOptions="actionNext"
            android:maxLines="1"
            />

        <View
            android:id="@+id/viewPasswordSeparator"
            style="@style/NormalSeparator"
            android:layout_below="@id/editTextPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            />
        <TextView
            android:id="@+id/forgot_password"
            android:text="@string/forgot_your_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/viewPasswordSeparator"
            android:textSize="12dp"
            android:textColor="@color/white"
            />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_fingerprint_login"
            android:id="@+id/switchEnableFingerprintLogin"
            android:checked="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/forgot_password"
            android:textSize="16dp"
            android:layout_marginTop="19dp"
            android:textColor="@color/white"
            android:thumb="@drawable/switchselector"
            android:track="@drawable/trackselector"
            />

        <View
            android:id="@+id/viewSwitchSeparator"
            style="@style/NormalSeparator"
            android:layout_below="@id/switchEnableFingerprintLogin"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="19dp"
            android:background="#ffffff"
            />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remember_me"
            android:id="@+id/switchRememberMe"
            android:layout_below="@+id/viewSwitchSeparator"
            android:checked="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:layout_marginTop="19dp"
            android:textColor="@color/white"
            android:thumb="@drawable/switchselector"
            android:track="@drawable/trackselector"
            />
        <Button
            android:id="@+id/buttonResume"
            android:text="@string/resume_application"
            android:textAllCaps="true"
            android:background="@drawable/ivl_button_white_solid"
            android:textColor="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switchRememberMe"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:onClick="@{()->activity.onResumeClicked()}"
            />

        <Button
            android:id="@+id/signUp"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:background="@drawable/ivl_button_white_border"
            android:textColor="@drawable/ivl_button_white_border_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonResume"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:onClick="@{()->activity.onCancelClicked()}"
            />


        <ImageButton
            android:id="@+id/configButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            app:srcCompat="@drawable/gear"
            />

        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="version"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:textSize="12dp"
            />
    </RelativeLayout>
</layout>
