<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mainbackgroundcolor"
    >

    <ImageView
        android:id="@+id/resourceImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        />

    <TextView
        android:id="@+id/resourceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/resourceImage"
        android:layout_alignTop="@+id/resourceImage"
        android:layout_alignBottom="@+id/resourceImage"
        android:paddingLeft="16dp"
        android:text="Terms and Conditions as a PDF"
        android:textSize="16dp"
        />
</RelativeLayout>