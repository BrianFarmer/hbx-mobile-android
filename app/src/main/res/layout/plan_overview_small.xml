<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view"
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardCornerRadius="4dp"
                                    card_view:cardElevation="4dp"
                                    card_view:cardUseCompatPadding="true"
                                    android:layout_margin="8dp"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="30dp"
                                    android:padding="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

    >
        <ImageView
            android:id="@+id/discardOverlay"
            app:srcCompat="@drawable/discard_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/keepdOverlay"
            android:src="@drawable/keep_transparent"
            app:srcCompat="@drawable/keep_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical" android:layout_width="match_parent"
                  android:layout_height="match_parent">




        <ImageView
            android:id="@+id/carrierLogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/plan_selector_card_icon_height"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/plan_selector_card_icon_margin_top"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/planName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/carrierLogo"
            android:layout_alignStart="@+id/carrierLogo"
            android:layout_below="@+id/carrierLogo"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="TextView"
            android:textSize="@dimen/plan_selector_card_font"
            android:maxLines="2"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            >
            <TextView
                android:id="@+id/planTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:text="@string/plan_type"
                android:textSize="@dimen/plan_selector_card_font"
                />
            <TextView
                android:id="@+id/planType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/planTypeLabel"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:textSize="@dimen/plan_selector_card_font"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/plan_selector_card_text_spacing"
            >
            <TextView
                android:id="@+id/planLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/plan_location"
                android:textSize="@dimen/plan_selector_card_font"
                />
            <TextView
                android:id="@+id/planLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/planLocationLabel"
                android:layout_alignParentRight="true"
                android:text="TextView"
                android:textSize="@dimen/plan_selector_card_font"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/plan_selector_card_text_spacing"
            >
            <TextView
                android:id="@+id/metalLevelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/metal_level"
                android:textSize="@dimen/plan_selector_card_font"
                />
            <ImageView
                android:id="@+id/planMetalRing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/metalLevelLabel"
                android:layout_alignBottom="@+id/metalLevelLabel"
                android:layout_toRightOf="@+id/metalLevelLabel"
                />
            <TextView
                android:id="@+id/metalType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/planMetalRing"
                android:layout_alignParentRight="true"
                android:text="TextView"
                android:textSize="@dimen/plan_selector_card_font"
                />
        </RelativeLayout>


        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/plan_selector_card_costs_margin_big"
            >
            <TextView
                android:id="@+id/monthlyLabel"
                app:layout_widthPercent="33%"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:textSize="@dimen/plan_selector_card_font"
                android:text="@string/monthly"
                />
            <TextView
                android:id="@+id/monthlyPremiumLabel"
                app:layout_widthPercent="33%"
                android:layout_height="wrap_content"
                android:layout_below="@+id/monthlyLabel"
                android:gravity="center_horizontal"
                android:textSize="@dimen/plan_selector_card_font"
                android:text="@string/premium"
                />
            <TextView
                android:id="@+id/monthlyPremium"
                app:layout_widthPercent="33%"
                android:layout_height="wrap_content"
                android:layout_below="@+id/monthlyPremiumLabel"
                android:gravity="center_horizontal"
                android:textSize="@dimen/plan_selector_card_costs_font"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/annualLabel"
                app:layout_widthPercent="33%"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/monthlyLabel"
                android:gravity="center_horizontal"
                android:textSize="@dimen/plan_selector_card_font"
                android:text="@string/annual"
                />
            <TextView
                android:id="@+id/premiumLabel"
                app:layout_widthPercent="33%"
                android:layout_height="wrap_content"
                android:layout_below="@+id/annualLabel"
                android:layout_toRightOf="@id/monthlyLabel"
                android:gravity="center_horizontal"
                android:textSize="@dimen/plan_selector_card_font"
                android:text="@string/premium"
                />
            <TextView
                android:id="@+id/annualPremium"
                app:layout_widthPercent="33%"
                android:layout_height="wrap_content"
                android:layout_below="@id/premiumLabel"
                android:layout_toRightOf="@id/monthlyPremium"
                android:gravity="center_horizontal"
                android:textSize="@dimen/plan_selector_card_costs_font"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/deductibleLabel"
                app:layout_widthPercent="33%"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/premiumLabel"
                android:layout_toRightOf="@id/annualLabel"
                android:gravity="center_horizontal"
                android:textSize="@dimen/plan_selector_card_font"
                android:text="@string/deductible"
                />
            <TextView
                android:id="@+id/deductible"
                app:layout_widthPercent="33%"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/deductibleLabel"
                android:layout_toRightOf="@id/annualPremium"
                android:textSize="@dimen/plan_selector_card_costs_font"
                android:text="$7,175"
                android:textStyle="bold"
                />
        </android.support.percent.PercentRelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/plan_selector_card_icon_margin_top"
            android:layout_marginBottom="@dimen/plan_selector_card_icon_margin_top"
            >
            <Button
                android:id="@+id/details"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:text="Details"
                android:textSize="@dimen/plan_selector_card_font"
                android:paddingTop="@dimen/plan_selector_card_button_padding"
                android:paddingBottom="@dimen/plan_selector_card_button_padding"
                />

            <Button
                android:id="@+id/enroll"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:text="@string/buy"
                android:textSize="@dimen/plan_selector_card_font"
                android:paddingTop="@dimen/plan_selector_card_button_padding"
                android:paddingBottom="@dimen/plan_selector_card_button_padding"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_weight="1"
            android:visibility="invisible"
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_vector"
            android:layout_centerHorizontal="true"
        />
    </LinearLayout>
</android.support.v7.widget.CardView>