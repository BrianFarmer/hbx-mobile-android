<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="dialog"
            type="org.dchbx.coveragehq.AppConfigDialog"/>
        <variable
            name="appConfig"
            type="org.dchbx.coveragehq.ServiceManager.AppConfig"/>
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/serverGroup">
            <RadioButton
                android:id="@+id/github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use GitHub"
                android:layout_below="@+id/radioGroup"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:checked="@{appConfig.DataSource == org.dchbx.coveragehq.ServiceManager.DataSource.GitHub}"
                android:onCheckedChanged="@{(radioButton, isChecked) -> (isChecked) ? dialog.setDataSource(org.dchbx.coveragehq.ServiceManager.DataSource.GitHub) : void}"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/gutHubUrl"
                    android:textSize="16dp"
                    android:text="Url:"
                    />
                <EditText
                    android:id="@+id/gutHubUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:text="@={appConfig.GithubUrl}"
                    android:textSize="16dp"
                    android:layout_toRightOf="@+id/textView6"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RadioButton
                android:id="@+id/mobileServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use HBX Mobile Server"
                android:layout_below="@+id/gutHubUrl"
                android:layout_toRightOf="@+id/radioGroup"
                android:layout_toEndOf="@+id/radioGroup"
                android:checked="@{appConfig.DataSource == org.dchbx.coveragehq.ServiceManager.DataSource.MobileServer}"
                android:onCheckedChanged="@{(radioButton, isChecked) -> (isChecked) ? dialog.setDataSource(org.dchbx.coveragehq.ServiceManager.DataSource.MobileServer) : void}"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/hbxMobileServerUrl"
                    android:textSize="16dp"
                    android:text="Url:"
                    />
                <EditText
                    android:id="@+id/hbxMobileServerUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:text="@={appConfig.MobileServerUrl}"
                    android:textSize="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView7"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:text="@android:string/ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonOk"
                android:layout_weight="1"
                android:onClick="@{() -> dialog.ok()}"
            />
            <Button
                android:text="@android:string/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCancel"
                android:layout_weight="1"
                android:onClick="@{() -> dialog.cancel()}"
            />
        </LinearLayout>

    </RelativeLayout>
</layout>
