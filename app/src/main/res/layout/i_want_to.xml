<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title=""
        android:background="@color/titlebar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/iWantTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/i_want_to"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textColor="@color/textdarkgray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.0"
        />
    <View
        android:id="@+id/break_1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/lightgray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iWantTo"
        android:layout_marginTop="32dp"
        />

    <Button
        android:id="@+id/nextYearCoverage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/transparent"
        android:text="@string/coverage_after"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:textColor="@color/mainblue"
        android:textSize="20dp"
        android:drawableRight="@drawable/right_arrow_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/break_1"
        />
    <View
        android:id="@+id/break_2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/lightgray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextYearCoverage"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/earlyCoverage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/coverage_before"
        android:fontFamily="sans-serif"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:textColor="@color/textdarkgray"
        android:textSize="20dp"
        android:drawableRight="@drawable/right_arrow_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/break_2"
        android:background="@color/transparent"
        />
    <View
        android:id="@+id/break_3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/lightgray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/earlyCoverage"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/dentalCoverage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Get dental coverage."
        android:fontFamily="sans-serif"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:textColor="@color/textdarkgray"
        android:textSize="20dp"
        android:drawableRight="@drawable/right_arrow_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/break_3"
        android:background="@color/transparent"
        />
    <View
        android:id="@+id/break_4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/lightgray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dentalCoverage"
        android:layout_marginTop="20dp"
        />
</android.support.constraint.ConstraintLayout>