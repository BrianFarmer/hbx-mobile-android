<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="org.dchbx.coveragehq.ridp.AcctSsn"/>
        <variable
            name="account"
            type="org.dchbx.coveragehq.models.account.Account"/>
    </data>
    <android.support.constraint.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title=""
            android:background="@color/titlebar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/marketplaceCoverage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/applicants_ineligible"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textStyle="bold"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            />

        <TextView
            android:id="@+id/canEnroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/do_not_qualify"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/marketplaceCoverage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />

        <ListView
            android:id="@+id/ineligibleList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/marketplaceCoverage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            ></ListView>

        <TextView
            android:id="@+id/receiveNotice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/receive_notice"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/leftButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />
        <ImageButton
            android:id="@+id/leftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/rightButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="22dp"
            app:srcCompat="@drawable/blue_circle_vector_small"
            android:onClick="@{()->activity.onClick(account)}"
            app:layout_constraintHorizontal_chainStyle="packed"
            />
        <ImageButton
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/leftButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="22dp"
            app:srcCompat="@drawable/blue_circle_solid_small"
            android:onClick="@{()->activity.onClick(account)}"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
